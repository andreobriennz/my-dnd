<h1>Sign In</h1>

<%= form_with url: sign_in_path do |form| %>
    <div class="mb-2">
        <%= form.label :username %>
        <%= form.text_field :username, class: "form-control", placeholder: "user123" %>
    </div>
    <div class="mb-2">
        <%= form.label :password %>
        <%= form.password_field :password, class: "form-control" %>
    </div>

    <%= form.submit "Get Started", data: {turbo: false}, class: "btn btn-primary" %>
<% end %>