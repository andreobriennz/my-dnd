<div class="container-small mt-8 shallow-stack-sm">
    <h1 class="heading-mega">Sign In</h1>

    <%= form_with url: sign_in_path, class: "form" do |form| %>
        <% if @user.errors.any? %>
            <div class="alert alert-error my-2">
                <% @user.errors.full_messages.each do |message| %>
                    <div><%= message %></div>
                <% end %>
            </div>
        <% end %>

        <div class="form-item">
            <%= form.label :username %>
            <%= form.text_field :username, class: "input", placeholder: "user123" %>
        </div>
        <div class="form-item">
            <%= form.label :password %>
            <%= form.password_field :password, class: "input" %>
        </div>

        <%= form.submit "Get Started", data: {turbo: false}, class: "button button-primary" %>
    <% end %>

    <p>Don't have an account? <%= link_to "Sign up", sign_up_path %></p>
</div>