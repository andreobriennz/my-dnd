<div class="navbar container centered">
    <div class="navbar-container">
        <div class="navbar-brand">
            <a href="<%= root_path %>" class="brand">
                <%= image_tag("dragon-logo.png", width: 48) %>
            </a>
        </div>
        <div class="navbar-nav flex-auto">
            <nav class="nav nav-centered">
                <ul class="nav-list">
                    <li class="nav-item">
                        <%= link_to "Home", root_path, class: "nav-link" %>
                    </li>
                    <li class="nav-item">
                        <%= link_to "Campaigns", campaigns_path, class: "nav-link" %>
                    </li>
                    <li class="nav-item">
                        <%= link_to "Magic Items", magic_items_path, class: "nav-link" %>
                    </li>
                    <li class="nav-item">
                        <%= link_to "Spells", spells_path, class: "nav-link" %>
                    </li>
                    <li class="nav-item">
                        <%= link_to "Monsters", monsters_path, class: "nav-link" %>
                    </li>
                </ul>
            </nav>
        </div>
        <div class="navbar-action">
            <% if is_logged_in? %>
                <%= button_to "Sign Out", sign_out_path, method: :delete, class: "button button-secondary button-small" %>
            <% else %>
                <%= link_to "Log In", sign_in_path, class: "button button-secondary button-small mr-2" %>
                <%= link_to "Sign Up", sign_up_path, class: "button button-primary button-small" %>
            <% end %>
        </div>
    </div>
</div>
